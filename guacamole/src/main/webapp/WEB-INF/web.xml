        <servlet-name>Clipboard</servlet-name>
        <servlet-class>org.glyptodon.guacamole.net.basic.rest.clipboard.ClipboardRESTService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Clipboard</servlet-name>
        <url-pattern>/clipboard</url-pattern>
    </servlet-mapping>-->
</web-app>
