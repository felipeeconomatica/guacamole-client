<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
						http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<!-- Basic config -->
	<welcome-file-list>
		<welcome-file>ecoCloud.html</welcome-file>
	</welcome-file-list>
	<session-config>
        	<session-timeout>60</session-timeout>
	</session-config>


	<!-- Guice -->
    	<filter>
        	<filter-name>guiceFilter</filter-name>
	        <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
    	</filter>
    	<filter-mapping>
        	<filter-name>guiceFilter</filter-name>
        	<url-pattern>/*</url-pattern>
    	</filter-mapping>

    	<listener>
        	<listener-class>org.glyptodon.guacamole.net.basic.BasicServletContextListener</listener-class>
    	</listener>


    <!-- Automatically detect and load WebSocket support -->
    <!--<listener>
        <listener-class>org.glyptodon.guacamole.net.basic.WebSocketSupportLoader</listener-class>
    </listener> -->	

	<!-- Guacamole Tunnel Servlet -->
	<servlet>
		<description>Economatica Login</description>
		<servlet-name>EcoLogin</servlet-name>
		<servlet-class>org.glyptodon.guacamole.net.economatica.EconomaticaTunnelServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>EcoLogin</servlet-name>
		<url-pattern>/ecoLogin</url-pattern>
	</servlet-mapping>

	<!-- Guacamole WebSocket Tunnel Servlet -->
	<servlet>
		<description>Economatica WebSocket</description>
		<servlet-name>WebSocketTunnel</servlet-name>
		<servlet-class>org.glyptodon.guacamole.net.economatica.EconomaticaTunnelWebSocketServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>WebSocketTunnel</servlet-name>
		<url-pattern>/websocket-tunnel</url-pattern>
	</servlet-mapping>


     <!-- Clipboard State Servlet -->
